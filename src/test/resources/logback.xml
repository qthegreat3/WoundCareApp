            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="org.springframework.security" level="debug">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>
    -->

    <root level="info">
        <appender-ref ref="STDOUT" />
        <!-- <appender-ref ref="FILE" /> -->
    </root>
</configuration>